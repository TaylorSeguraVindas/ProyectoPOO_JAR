<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="440.0" prefWidth="580.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="segura.taylor.controlador.interfaz.usuarios.ControladorRegistroCliente">
   <children>
      <VBox alignment="CENTER" prefHeight="51.0" prefWidth="546.0">
         <children>
            <Label fx:id="lblTitulo" text="Registro de usuario" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <HBox prefHeight="276.0" prefWidth="546.0" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox prefHeight="251.0" prefWidth="272.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Correo electrónico" />
                        <TextField fx:id="txtCorreo" promptText="Correo" />
                        <Label layoutX="10.0" layoutY="10.0" text="Contrasenna" />
                        <PasswordField fx:id="txtContrasenna" layoutX="10.0" layoutY="10.0" promptText="Contrasenna" />
                        <Label layoutX="10.0" layoutY="52.0" text="Nombre" />
                        <TextField fx:id="txtNombre" layoutX="10.0" layoutY="35.0" promptText="Nombre" />
                        <Label layoutX="10.0" layoutY="94.0" text="Apellidos" />
                        <TextField fx:id="txtApellidos" layoutX="10.0" layoutY="60.0" promptText="Apellidos" />
                        <Label layoutX="10.0" layoutY="136.0" text="Pais" />
                        <ComboBox fx:id="txtPais" prefHeight="25.0" prefWidth="270.0" promptText="Seleccione un pais" />
                        <Button fx:id="btnCambiarContrasenna" mnemonicParsing="false" onAction="#cambiarContrasenna" prefHeight="32.0" prefWidth="147.0" text="Cambiar contraseña">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
                  <VBox prefHeight="278.0" prefWidth="267.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Nombre de usuario" />
                        <TextField fx:id="txtNombreUsuario" promptText="Nombre de usuario" />
                        <Label layoutX="10.0" layoutY="10.0" text="Fecha de nacimiento" />
                        <DatePicker fx:id="txtFechaNacimiento" prefHeight="25.0" prefWidth="299.0" promptText="Fecha de nacimiento" VBox.vgrow="ALWAYS" />
                        <VBox alignment="CENTER">
                           <children>
                              <Label text="Foto de perfil" />
                              <ImageView fx:id="imagenPerfil" fitHeight="129.0" fitWidth="157.0" pickOnBounds="true" preserveRatio="true" />
                              <Button fx:id="btnSeleccionarImagen" mnemonicParsing="false" onAction="#seleccionarImagen" text="Seleccionar" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="btnRegistrarModificar" mnemonicParsing="false" prefHeight="35.0" prefWidth="144.0" text="Registrar" />
                  <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#volver" prefHeight="34.0" prefWidth="144.0" text="Volver" />
               </children>
            </VBox>
         </children></VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
   </padding>
</VBox>
