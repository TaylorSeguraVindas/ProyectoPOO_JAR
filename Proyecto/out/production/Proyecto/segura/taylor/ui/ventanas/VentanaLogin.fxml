<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="segura.taylor.controlador.interfaz.usuarios.ControladorLogin">
   <children>
      <VBox alignment="CENTER" prefHeight="94.0" prefWidth="415.0">
         <children>
            <Label text="Inicio de sesión" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <VBox prefHeight="304.0" prefWidth="420.0">
         <children>
            <Label text="Correo" />
            <TextField fx:id="txtCorreo" layoutX="30.0" layoutY="141.0" prefHeight="25.0" prefWidth="474.0" promptText="Correo">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </TextField>
            <Label layoutX="30.0" layoutY="50.0" text="Contraseña" />
            <PasswordField fx:id="txtContrasenna" prefHeight="25.0" prefWidth="474.0" promptText="Contraseña">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </PasswordField>
            <VBox alignment="CENTER" prefHeight="135.0" prefWidth="380.0" spacing="10.0">
               <children>
                  <Button fx:id="btnIniciarSesion" mnemonicParsing="false" onAction="#iniciarSesion" prefHeight="43.0" prefWidth="156.0" text="Iniciar sesion" />
                  <Button fx:id="btnRegistrarse" mnemonicParsing="false" onAction="#registrarUsuario" prefHeight="40.0" prefWidth="156.0" text="Registrarse" />
                  <Button fx:id="btnOlvidoContrasenna" layoutX="122.0" layoutY="57.0" mnemonicParsing="false" onAction="#olvidarContrasenna" prefHeight="8.0" prefWidth="156.0" text="Olvidé mi contraseña" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="40.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>
