<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="660.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="segura.taylor.controlador.interfaz.cancion.ControladorRegistroCancion">
    <children>
        <VBox alignment="CENTER" prefHeight="49.0" prefWidth="619.0">
            <children>
                <Label fx:id="lblTitulo" text="Registro de canción" textAlignment="CENTER">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
        </VBox>
        <VBox VBox.vgrow="ALWAYS">
            <children>
                <HBox prefHeight="223.0" prefWidth="619.0" spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox prefHeight="251.0" prefWidth="272.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Recurso" />
                        <HBox spacing="5.0">
                           <children>
                                      <TextField fx:id="txtRecurso" promptText="Recurso" HBox.hgrow="ALWAYS" />
                              <Button fx:id="btnSeleccionarRecurso" mnemonicParsing="false" onAction="#seleccionarRecurso" text="Seleccionar" />
                           </children>
                        </HBox>
                                <Label layoutX="10.0" layoutY="10.0" text="Nombre" />
                                <TextField fx:id="txtNombre" layoutX="10.0" layoutY="10.0" promptText="Nombre" />
                                <Label layoutX="10.0" layoutY="52.0" text="Duración" />
                                <TextField fx:id="txtDuracion" layoutX="10.0" layoutY="35.0" promptText="00.00" />
                                <Label layoutX="10.0" layoutY="94.0" text="Fecha lanzamiento" />
                                <DatePicker fx:id="txtFechaLanzamiento" prefHeight="25.0" prefWidth="321.0" promptText="Fecha de nacimiento" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>
                        <VBox prefHeight="278.0" prefWidth="267.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Artista" />
                        <HBox spacing="5.0">
                           <children>
                                      <ComboBox fx:id="txtArtista" prefHeight="25.0" prefWidth="270.0" />
                              <Button fx:id="btnCrearArtista" mnemonicParsing="false" onAction="#crearArtista" prefHeight="25.0" prefWidth="106.0" text="Crear" />
                           </children>
                        </HBox>
                        <Label layoutX="10.0" layoutY="10.0" text="Compositor" />
                        <HBox layoutX="10.0" layoutY="27.0" spacing="5.0">
                           <children>
                              <ComboBox fx:id="txtCompositor" prefHeight="25.0" prefWidth="270.0" />
                              <Button fx:id="btnCrearCompositor" mnemonicParsing="false" onAction="#crearCompositor" prefHeight="25.0" prefWidth="106.0" text="Crear" />
                           </children>
                        </HBox>
                        <Label layoutX="10.0" layoutY="52.0" text="Género" />
                        <HBox layoutX="10.0" layoutY="69.0" spacing="5.0">
                           <children>
                              <ComboBox fx:id="txtGenero" prefHeight="25.0" prefWidth="270.0" />
                              <Button fx:id="btnCrearGenero" mnemonicParsing="false" onAction="#crearGenero" prefHeight="25.0" prefWidth="106.0" text="Crear" />
                           </children>
                        </HBox>
                                <Label text="Precio" />
                                <TextField fx:id="txtPrecio" promptText="0.00" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <VBox alignment="CENTER" prefHeight="104.0" prefWidth="619.0" spacing="10.0">
                    <children>
                        <Button fx:id="btnRegistrarModificar" mnemonicParsing="false" prefHeight="35.0" prefWidth="144.0" text="Registrar" />
                        <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#cerrar" prefHeight="34.0" prefWidth="144.0" text="Volver" />
                    </children>
                </VBox>
            </children></VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
    </padding>
</VBox>
